		PIN_SLP(gpa0-0, PREV,  NONE);// UART0_RX(BT)
		PIN_SLP(gpa0-1, PREV,  NONE);// UART0_TX(BT)
		PIN_SLP(gpa0-2, PREV,  NONE);// UART0_CTS(BT)
		PIN_SLP(gpa0-3, PREV,  NONE);// UART0_RTS(BT)

		PIN_SLP(gpa0-4, INPUT, DOWN);// UART1_RX(SUB)
		PIN_SLP(gpa0-5, OUT0,  NONE);// UART1_TX(SUB)
		PIN_SLP(gpa0-6, INPUT, DOWN);// UART1_CTS(SUB)
		PIN_SLP(gpa0-7, INPUT, DOWN);// UART1_RTS(SUB)

		PIN_SLP(gpa1-0, INPUT, DOWN);// UART2_RX(DBG)
		PIN_SLP(gpa1-1, OUT0,  NONE);// UART2_TX(DBG)
		PIN_SLP(gpa1-2, INPUT, NONE);// TP_SDA
		PIN_SLP(gpa1-3, INPUT, NONE);// TP_SCL
		PIN_SLP(gpa1-4, INPUT, DOWN);// NC
		PIN_SLP(gpa1-5, INPUT, DOWN);// NC

