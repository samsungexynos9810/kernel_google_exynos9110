		PIN_SLP(gpd1-1, INPUT, NONE);// I2C0_SCL(PMIC)
		PIN_SLP(gpd1-2, INPUT, DOWN);// I2C1_SDA(AKM)
		PIN_SLP(gpd1-3, INPUT, DOWN);// I2C1_SCL(AKM)
