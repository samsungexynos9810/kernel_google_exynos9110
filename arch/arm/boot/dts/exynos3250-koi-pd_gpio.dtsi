		PIN_SLP(gpb-6,  INPUT, DOWN);// SPI1_MISO(SUB)
		PIN_SLP(gpb-7,  INPUT, DOWN);// SPI1_MOSI(SUB)

		PIN_SLP(gpc0-0, INPUT, DOWN);// NC
		PIN_SLP(gpc0-1, OUT1,  NONE);// LCD_RST
		PIN_SLP(gpc0-2, INPUT, DOWN);// NC
		PIN_SLP(gpc0-3, INPUT, DOWN);// DUAL_WKUP
		PIN_SLP(gpc0-4, INPUT, DOWN);// PWCTL_BL

		PIN_SLP(gpc1-0, INPUT, DOWN);// I2S2_SCLK
		PIN_SLP(gpc1-1, INPUT, DOWN);// I2S2_CDCLK
		PIN_SLP(gpc1-2, INPUT, DOWN);// I2S2_LRCK
		PIN_SLP(gpc1-3, INPUT, DOWN);// I2S2_SDI
		PIN_SLP(gpc1-4, INPUT, DOWN);// I2S2_SDO

