		PIN_SLP(gpb-0,  INPUT, DOWN);// NC
		PIN_SLP(gpb-1,  INPUT, DOWN);// NC
		PIN_SLP(gpb-2,  INPUT, DOWN);// NC
		PIN_SLP(gpb-3,  INPUT, DOWN);// NC
